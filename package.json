{
  "name": "@manuth/tsconfig",
  "version": "1.2.7",
  "description": "Provides recommended settings for TypeScript",
  "author": "Manuel Thalmann <m@nuth.ch>",
  "license": "MIT",
  "keywords": [
    "TypeScript",
    "configuration",
    "recommendations",
    "tsc",
    "tsconfig"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://github.com/manuth/TypeScriptRecommendations#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuth/TypeScriptRecommendations.git"
  },
  "bugs": {
    "url": "https://github.com/manuth/TypeScriptRecommendations/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "watch": "npm run build -- --watch",
    "clean": "npm run build -- --clean && rimraf ./lib",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx ./src .eslintrc.js",
    "lint-ide": "npm run lint || exit 0",
    "test": "mocha",
    "prepare": "npm run rebuild"
  },
  "dependencies": {},
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^2.3.4",
    "@manuth/temp-files": "^2.0.2",
    "@manuth/tsconfig": "^1.2.4",
    "@manuth/typescript-eslint-plugin": "^1.3.2",
    "@types/fs-extra": "^9.0.5",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.14",
    "@types/npm-which": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.16.0",
    "eslint-plugin-deprecation": "^1.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.9",
    "fs-extra": "^9.0.1",
    "mocha": "^8.2.1",
    "npm-which": "^3.0.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
